@model IEnumerable<StoryTeller.Princesse>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PrincessID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PrincessID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PrincessID })
            </td>
        </tr>
    }

</table>
@{
    int counter = 0;
    foreach (var item in Model)
    {
        counter++;
        //counts the items in the list
    }
}
@if (counter == 9)
{
    <div> This is the final post, please wrap up the story!</div>
    //warns the user about the final post
}
@if (counter < 10)
{
    <p>
        @{ Html.RenderPartial("Create", new Princesse()); }
        @* This takes away the text box and create button after the tenth post *@
    </p>
}
else
{
    @Html.ActionLink("New Story", "index", "Themes")
    //Replaces create area with themes action link
}