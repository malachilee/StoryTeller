@model IEnumerable<StoryTeller.Pirate>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="pirateEntries">
        @foreach (var item in Model)
        {
            @Html.DisplayFor(modelItem => item.Text)<br />

            @*<p>  @Html.ActionLink("Edit", "Edit", new { id = item.PirateID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PirateID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PirateID }) </p>*@
        }
    </div>
</div>

@{
    int counter = 0;
    foreach (var item in Model)
    {
        counter++;
        //counts the items in the list
    }
}
@if (counter == 9)
{
    <div> This is the final post, please wrap up the story!</div>
    //warns the user about the final post
}
@if (counter < 10)
{
    <p>
        @{ Html.RenderPartial("Create", new Pirate()); }
        @* This takes away the text box and create button after the tenth post *@
    </p>
}
else
{
    @Html.ActionLink("New Story", "index", "Themes")
    //Replaces create area with themes action link
}
