@model IEnumerable<StoryTeller.Pirate>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PirateID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PirateID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PirateID })
            </td>
        </tr>
    }

</table>
@{
    int counter = 0;
    foreach (var item in Model)
    {
        counter++;
    }
}

@if (counter < 10)
{
    <p>
        @{ Html.RenderPartial("Create", new Pirate()); }
    </p>
}
